{
    "name": "futuretek/yii2-rbac",
    "description": "RBAC",
    "keywords": [
        "extension",
        "role based access control",
        "rbac",
        "yii"
    ],
    "type": "yii2-extension",
    "license": "Apache-2.0",
    "homepage": "http://www.futuretek.cz/",
    "authors": [
        {
            "name": "Lukas Cerny",
            "email": "lukas.cerny@futuretek.cz",
            "homepage": "http://www.futuretek.cz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "futuretek/yii2-shared": "^1.0.0",
        "futuretek/yii2-yii-shared": "^1.0.0",
        "futuretek/yii2-migrations": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "futuretek\\rbac\\": ""
        }
    },
    "extra": {
        "yii-config": {
            "components": {
                "authManager": {
                    "class": "yii\\rbac\\DbManager"
                }
            },
            "console": {
                "components": {
                    "authManager": {
                        "class": "yii\\rbac\\DbManager"
                    }
                },
                "controllerMap": {
                    "rbac": {
                        "class": "futuretek\\rbac\\RbacController"
                    }
                }
            }
        }
    }
}
